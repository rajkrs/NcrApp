{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "commonjs",
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "lib": [ "es5", "es6", "dom", "scripthost", "es2015" ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node"
  },
  "compileOnSave": true,
  "include": [
    "types/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "coverage",
    "types",
    "**/*.spec.ts",
    "**/*.test.ts*",
    "**/__tests__/*"
  ],
  "files": [
    "app.tsx"
  ]
}


